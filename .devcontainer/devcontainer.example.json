// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
  "name": "Whatsapp-Daily-XP",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:noble",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers-extra/features/node-asdf:0": {
      "version": "22.21.0"
    },
    "ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
      "plugins": "F-Sy-H zsh-autosuggestions zsh-completions",
      "omzPlugins": "https://github.com/z-shell/F-Sy-H https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-completions"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        // Collaboration Tools
        "ms-vsliveshare.vsliveshare",
        "mhutchie.git-graph",
        "eamodio.gitlens",
        // Code Quality and Formatting
        "editorconfig.editorconfig",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "mattpocock.ts-error-translator",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-portuguese-brazilian",
        // Development Utilities
        "aaron-bond.better-comments",
        "gruntfuggly.todo-tree",
        "christian-kohler.path-intellisense",
        "oderwat.indent-rainbow",
        // Testing and Debugging
        "firsttris.vscode-jest-runner",
        "Orta.vscode-jest",
        "humao.rest-client",
        // Performance and Optimization
        "wix.vscode-import-cost",
        // Conventional Commits and Version Control
        "vivaxy.vscode-conventional-commits"
      ]
    }
  }
}
